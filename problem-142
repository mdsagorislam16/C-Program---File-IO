#include <stdio.h>

int main() {
    FILE *src = fopen("source.txt","r");
    FILE *dest = fopen("dest.txt","w");
    if(!src || !dest) return 1;

    int ch;
    while((ch=fgetc(src))!=EOF)
        fputc(ch,dest);

    fclose(src);
    fclose(dest);

    printf("Content written successfully\n");
    return 0;
}

/*
Output:
Content written successfully
*/

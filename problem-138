#include <stdio.h>

int main() {
    FILE *f1 = fopen("file1.txt","r");
    FILE *f2 = fopen("file2.txt","r");

    if(!f1 || !f2){
        printf("Error opening files\n");
        return 1;
    }

    int ch1, ch2, pos=0;
    int mismatch = 0;

    while((ch1=fgetc(f1)) != EOF && (ch2=fgetc(f2)) != EOF) {
        pos++;
        if(ch1 != ch2) {
            printf("Mismatch at position %d\n", pos);
            mismatch++;
        }
    }

    if(mismatch==0) printf("Files are identical\n");

    fclose(f1);
    fclose(f2);
    return 0;
}

/*
Output (example):
Mismatch at position 5
*/

#include <stdio.h>

int main() {
    FILE *f1 = fopen("file1.txt","r");
    FILE *f2 = fopen("file2.txt","a"); // append mode
    if(!f1 || !f2) return 1;

    int ch;
    while((ch=fgetc(f1))!=EOF)
        fputc(ch,f2);

    fclose(f1);
    fclose(f2);

    printf("Content appended successfully\n");
    return 0;
}

/*
Output:
Content appended successfully
*/
